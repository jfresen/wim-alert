<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:descendantFocusability="beforeDescendants"
		android:focusableInTouchMode="true"
		android:gravity="center_horizontal|top"
		android:orientation="vertical">

		<TextView
			android:id="@+id/buildtime"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<View style="@style/Divider" />

		<LinearLayout
			android:id="@+id/trackedUserSetting"
			style="@style/Settings.Wrapper">

			<TextView
				style="@style/Settings.Title"
				android:text="@string/track_user_setting_title" />

			<TextView
				android:id="@+id/trackedUserSubtext"
				style="@style/Settings.Subtext"
				android:text="@string/track_user_setting_text_empty" />

		</LinearLayout>

		<View style="@style/Divider" />

		<Button
			android:id="@+id/applyNameButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/apply_name" />

		<Button
			android:id="@+id/turnAlarmOn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/turn_alarm_on" />

		<Button
			android:id="@+id/turnAlarmOff"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/turn_alarm_off" />

		<FrameLayout
			android:id="@+id/fragmentContainer"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

	</LinearLayout>

</ScrollView>
