<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

		<!-- Color palette -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>

		<!-- Buttons -->
		<item name="buttonStyle">@style/App.Button</item>
		<item name="colorButtonNormal">?attr/colorPrimary</item>
		<item name="android:textAppearanceButton">@style/TextAppearance.AppCompat.Widget.Button.Inverse</item>

		<!-- Dialogs -->
		<item name="alertDialogTheme">@style/Theme.App.AlertDialog</item>
	</style>

	<style name="Theme.App.AlertDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
		<!-- Apply color palette to AlertDialogs -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

</resources>
